#include <iostream>

using namespace std;

int main()
{
    int num;

    cout << endl;
    cout << "verifique si un número es positivo, negativo o cero" << endl << endl;
    cout << "Ingresar el número" << endl;
    cin >> num;

    if (num < 0){
        cout << "El número " << num << "es negativo";
    }
    else if (num == 0){
        cout << "El número es" << num;
    }
    else{
        cout << "El número es positivo";
    }
    
}